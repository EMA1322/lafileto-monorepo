{
  "name": "lafileto-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n API,ADMIN,CLIENT -c auto \"pnpm -F backend dev\" \"pnpm -F admin dev\" \"pnpm -F client dev\"",
    "dev:backend": "pnpm -F backend dev",
    "dev:admin": "pnpm -F admin dev",
    "dev:client": "pnpm -F client dev",
    "build": "pnpm -F backend build && pnpm -F admin build && pnpm -F client build",
    "build:backend": "pnpm -F backend build",
    "build:admin": "pnpm -F admin build",
    "build:client": "pnpm -F client build",
    "preview": "concurrently -n PREVIEW-ADMIN,PREVIEW-CLIENT -c auto \"pnpm -F admin preview\" \"pnpm -F client preview\"",
    "clean": "rimraf **/node_modules **/dist || true",
    "lint": "pnpm exec eslint . --no-error-on-unmatched-pattern",
    "lint:fix": "pnpm exec eslint . --fix --no-error-on-unmatched-pattern",
    "format": "pnpm exec prettier . --write",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "globals": "^13.24.0",
    "husky": "^9.1.7",
    "kill-port": "^2.0.1",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "supertest": "^6.3.4"
  },
  "lint-staged": {
    "*.{js,jsx,mjs,cjs}": [
      "pnpm exec prettier --write",
      "pnpm exec eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "pnpm exec prettier --write"
    ]
  },
  "packageManager": "pnpm@9.15.9+sha512.68046141893c66fad01c079231128e9afb89ef87e2691d69e4d40eee228988295fd4682181bae55b58418c3253bde65a505ec7c5f9403ece5cc3cd37dcf2531"
}
