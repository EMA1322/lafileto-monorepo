        {
            "name": "Categories",
            "item": [
                {
                    "name": "GET /api/v1/categories",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/categories?page=1&pageSize=10&status=all&orderBy=name&orderDir=asc",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "categories"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "pageSize",
                                    "value": "10"
                                },
                                {
                                    "key": "status",
                                    "value": "all"
                                },
                                {
                                    "key": "orderBy",
                                    "value": "name"
                                },
                                {
                                    "key": "orderDir",
                                    "value": "asc"
                                }
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('status 200', () => pm.response.code === 200);",
                                    "const json = pm.response.json();",
                                    "pm.test('ok true', () => json.ok === true);",
                                    "pm.test('items es array', () => Array.isArray(json.data.items));",
                                    "pm.test('meta incluye total', () => json.data.meta && typeof json.data.meta.total === 'number');"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "POST /api/v1/categories",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Bebidas {{timestamp}}\",\n  \"imageUrl\": \"https://cdn.example.com/cat/{{timestamp}}.webp\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/categories",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "categories"
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('status 201', () => pm.response.code === 201);",
                                    "const json = pm.response.json();",
                                    "pm.test('ok true', () => json.ok === true);",
                                    "pm.test('incluye id', () => json.data && json.data.id);"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "PUT /api/v1/categories/:id",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Bebidas Actualizadas\",\n  \"imageUrl\": \"https://cdn.example.com/cat/bebidas-actualizado.webp\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/categories/{{categoryId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "categories",
                                "{{categoryId}}"
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('status 200', () => pm.response.code === 200);",
                                    "const json = pm.response.json();",
                                    "pm.test('ok true', () => json.ok === true);",
                                    "pm.test('mantiene id', () => json.data && json.data.id === pm.collectionVariables.get('categoryId') || true);"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "DELETE /api/v1/categories/:id",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/categories/{{categoryId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "categories",
                                "{{categoryId}}"
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('status 200', () => pm.response.code === 200);",
                                    "pm.test('deleted true', () => pm.response.json().data?.deleted === true);"
                                ]
                            }
                        }
                    ]
                }
